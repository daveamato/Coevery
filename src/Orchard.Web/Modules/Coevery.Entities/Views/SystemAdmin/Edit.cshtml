@model Coevery.Entities.ViewModels.EditTypeViewModel
<header id="page-title">
    <h1 class="pull-left">@T("Entity Detail ") <span>show entity detail information</span></h1>
</header>

<section id="main-content" style="margin-top: 47px">
    <div id="page-actions" class="clearfix">
        <btn-actions>
            <button class="btn btn-small" data-ng-click="exit()">Back</button>
            <button class="btn btn-small btn-primary" data-indi-click="saveAndView()">Save</button>
            <button class="btn btn-small btn-primary" data-indi-click="saveAndBack()">Save & Back</button>
        </btn-actions>
    </div>

    <div class="row-fluid">
        <div class="span12">
            <div class="form-horizontal no-border">
                @using (Html.BeginFormAntiForgeryPost(Html.ViewContext.HttpContext.Request.Url.PathAndQuery, FormMethod.Post,
                                                              new { @class = "edit-mode", id = "myForm" }))
                {
                    @Html.ValidationSummary()
                    <fieldset>
                        <legend>General Information</legend>
                        <section class="data-row control-group">
                            <label class="control-label" for="inputName">Name</label>
                            <div class="controls">
                                <span class="control-label" style="text-align: left;">@T(Model.Name)</span>
                            </div>
                            <meta itemprop="Id" content="@Model.Name" />
                            @Html.HiddenFor(m => m.Name)
                        </section>
                        <section class="data-row control-group">
                            <label class="control-label required" for="DisplayName">Display Name</label>
                            <div class="controls errortips">
                                @Html.TextBoxFor(m => m.DisplayName, new { @class = "span12" ,required=""})
                            </div>
                            <meta itemprop="DisplayName" content="@Model.DisplayName" />
                        </section>
                    </fieldset>
                }
            </div>
        </div>
    </div>
</section>
